@using BikeShop.Models.Shop
@model ShopDetailViewModel
@{
    ViewData["Title"] = "Shop Details";
}

<strong><label asp-for="Manufacturer"></label></strong>
<p>@Model.Manufacturer</p>

<strong><label asp-for="Model"></label></strong>
<p>@Model.Model</p>

<strong><label asp-for="Type"></label></strong>
<p>@Model.Type</p>

<strong><label asp-for="Year"></label></strong>
<p>@Model.Year</p>

<strong><label asp-for="Price"></label></strong>
<p>@Model.Price</p>

<strong><label asp-for="PhotoUrl"></label></strong>
<p>
    <img src="@Model.PhotoUrl" width="300"/>
</p>

<div>

    <form>

        <div class="form-group">

            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>

            <button type="button" class="btn btn-success">
                Buy Bike
            </button>
        </div>


    </form>



</div>


<a asp-controller="Shop" asp-action="Index">Back to overview</a>